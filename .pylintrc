[MASTER]
persistent=yes
suggestion-mode=yes
unsafe-load-any-extension=no
ignore=migrations,venv,.venv,tests,tests/*,test_*,__init__.py,*_pb2.py

[FORMAT]
max-line-length=88

[MESSAGES CONTROL]
disable=
    C0111, # missing-docstring
    C0103, # invalid-name
    W0613, # unused-argument
    W0703, # broad-except
    R0903, # too-few-public-methods
    R0901, # too-many-ancestors
    W0212, # protected-access
    W0221, # arguments-differ
    E0401, # import-error

[SIMILARITIES]
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[BASIC]
good-names=i,j,k,ex,Run,_,id,pk,setUp,tearDown

[DESIGN]
max-parents=13

[TYPECHECK]
ignored-classes=WSGIRequest,HttpRequest,HttpResponse,QuerySet,ManyToManyField
