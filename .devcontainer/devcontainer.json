{
  "name": "Greenova Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "greenova",
  "workspaceFolder": "/workspaces/greenova",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "containerUser": "vscode",
  "forwardPorts": [8000],
  "customizations": {
    "vscode": {
      "settings": {
        "dev.containers.gpuAvailability": "none",
        "dotfiles.installCommand": "bash /home/vscode/dotfiles/setup.sh && echo 'Setup complete' || echo 'No setup.sh found';",
        "dotfiles.repository": "https://github.com/enssol/dotfiles.git",
        "dotfiles.targetPath": "/home/vscode/dotfiles",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "fish",
        "editor.occurrencesHighlight": "off",
        "editor.semanticHighlighting.enabled": false,
        "python.testing.pytestPath": "/usr/local/py-utils/bin/pytest",
        "eslint.format.enable": true,
        "eslint.lintTask.enable": true,
        "ruff.path": ["/usr/local/py-utils/bin/ruff"],
        "black-formatter.path": ["/usr/local/py-utils/bin/black"],
        "mypy-type-checker.path": ["/usr/local/py-utils/bin/mypy"],
        "bandit.path": ["/usr/local/py-utils/bin/bandit"],
        "pylint.path": ["/usr/local/py-utils/bin/pylint"],
        "isort.path": ["/usr/local/py-utils/bin/isort"],
        "eslint.runtime": "/usr/local/share/nvm/current/bin/node",
        "typescript.tsserver.nodePath": "/usr/local/share/nvm/current/bin/node",
        "shellcheck.executablePath": "/usr/local/bin/shellcheck",
        "shellformat.path": "/usr/local/bin/shfmt",
        "snyk.advanced.cliPath": "/usr/local/share/nvm/versions/node/v20.19.1/bin/snyk",
        "snyk.languageServerPath": "/home/vscode/.local/share/snyk/snyk-ls",
        "snyk.cachePath": "/home/vscode/.local/share/snyk",
        "snyk.cliPath": "/usr/local/share/nvm/current/bin/snyk",
        "protoc.path": "/usr/local/bin/protoc",
        "files.associations": {
          "*.css": "css",
          "*.html": "django-html",
          "*.js": "javascript",
          "*.json": "json",
          "*.md": "markdown",
          "*.py": "python",
          "*.toml": "toml",
          "*.txt": "plaintext",
          ".bandit": "yaml",
          ".env*": "dotenv",
          ".jinja": "jinja",
          ".pylintrc": "ini",
          ".pylintrc-django": "ini",
          "constraints*.txt": "pip-requirements",
          "pdm.toml": "toml",
          "poetry.toml": "toml",
          "pyproject.toml": "toml",
          "requirements*.txt": "pip-requirements",
          "tailwindcss.lint": "json"
        },
        "files.exclude": {
          "**/*.pyc": true,
          "**/.DS_Store": true,
          "**/.git": true,
          "**/.hg": true,
          "**/.pytest_cache": true,
          "**/.svn": true,
          "**/.venv": true,
          "**/CVS": true,
          "**/__pycache__": true,
          "**/node_modules": true,
          "**~/.vscode-server/**": true,
          "**~/.vscode/**": true,
          ".venv": true
        },
        "files.watcherExclude": {
          "**/*.pyc": true,
          "**/.DS_Store": true,
          "**/.env": true,
          "**/.git": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/.hg": true,
          "**/.pytest_cache": true,
          "**/.svn": true,
          "**/.venv": true,
          "**/.venv/**": true,
          "**/CVS": true,
          "**/__pycache__": true,
          "**/__pycache__/**": true,
          "**/node_modules": true,
          "**/node_modules/**": true,
          "**~/.vscode-server/**": true,
          "**~/.vscode/**": true
        },
        "[python]": {
          "editor.autoClosingQuotes": "always",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "ms-python.autopep8",
          "editor.formatOnPaste": true,
          "editor.rulers": [88, 100]
        },
        "djlint.pythonPath": "/workspaces/greenova/.venv/bin/python",
        "djlint.enableLinting": true,
        "djlint.useVenv": true,
        "dbcode.connections": [
          {
            "connectionId": "N-Ye-PKEqFS9-XzbC_IjN",
            "connectionType": "socket",
            "driver": "sqlite",
            "driverOptions": {
              "extensions": []
            },
            "name": "greenova",
            "readOnly": false,
            "role": "development",
            "socket": "greenova/greenova/db.sqlite3"
          }
        ],
        "snyk.trustedFolders": ["/workspaces/greenova"]
      },
      "extensions": [
        "batisteo.vscode-django",
        "monosans.djlint",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bmalehorn.vscode-fish",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint",
        "timonwong.shellcheck",
        "ms-python.debugpy",
        "foxundermoon.shell-format",
        "EditorConfig.EditorConfig",
        "github.vscode-pull-request-github",
        "dotenv.dotenv-vscode",
        "snyk-security.snyk-vulnerability-scanner",
        "ms-cst-e.vscode-devskim",
        "ms-vscode.makefile-tools",
        "zxh404.vscode-proto3",
        "plex.vscode-protolint",
        "bradlc.vscode-tailwindcss",
        "willumz.generic-pseudocode",
        "stylelint.vscode-stylelint",
        "wholroyd.jinja",
        "rarnoldmobile.todo-txt",
        "ymotongpoo.licenser",
        "marp-team.marp-vscode",
        "dbcode.dbcode",
        "ms-vscode.copilot-mermaid-diagram",
        "arahata.linter-actionlint",
        "ms-python.python",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "pycqa.bandit-pycqa",
        "exiasr.hadolint",
        "ms-python.autopep8",
        "PyCQA.bandit-pycqa",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "fnando.linter"
      ]
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=ro",
    "source=dotfiles,target=/home/vscode/dotfiles,type=volume"
  ],
  "initializeCommand": "mkdir -p \"${localWorkspaceFolder}/.devcontainer/.cache/buildx\" && (docker buildx inspect greenova >/dev/null 2>&1 && docker buildx rm greenova || true) && docker buildx create --name greenova && docker buildx use greenova && (docker buildx bake --file \"${localWorkspaceFolder}/.devcontainer/docker-bake.hcl\" --load greenova || (echo \"Docker build failed. Check configuration.\" && exit 1))",
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/dotfiles /home/vscode/.vscode-server || true && chmod +x /workspaces/greenova/.devcontainer/post_start.sh",
  "postStartCommand": "cd /workspaces/greenova && /bin/bash ./.devcontainer/post_start.sh",
  "features": {
    "ghcr.io/devcontainers-extra/features/direnv:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/jungaretti/features/make:1": {},
    "ghcr.io/marcozac/devcontainer-features/shellcheck:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/actionlint:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/curl-apt-get:1": {},
    "ghcr.io/devcontainers-extra/features/fish-apt-get:1": {},
    "ghcr.io/devcontainers-extra/features/shfmt:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/snyk-cli:1": {
      "version": "latest"
    },
    "ghcr.io/hspaans/devcontainer-features/django-upgrade:1": {
      "version": "latest"
    },
    "ghcr.io/hspaans/devcontainer-features/pyupgrade:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/bandit:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/black:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/coverage-py:2": {
      "version": "latest",
      "plugins": "coverage-badge coverage-conditional-plugin interrogate"
    },
    "ghcr.io/devcontainers-extra/features/mypy:2": {
      "version": "latest",
      "plugins": "django-stubs json-types django-stubs-ext types-dataclasses-json types-requests types-Pillow types-jsonschema types-simplejson types-PyYAML django-types-extra types-python-dateutil types-protobuf matplotlib-stubs pandas-stubs types-pytz pytest-stub types-pytest-lazy-fixture types-jinja2 types-setuptools types-cryptography types-flake8 plotly-stubs"
    },
    "ghcr.io/devcontainers-extra/features/isort:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {
      "version": "latest",
      "plugins": "pre-commit-hooks"
    },
    "ghcr.io/devcontainers-extra/features/ruff:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/yamllint:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/markdownlint-cli2:1": {
      "version": "latest",
      "plugins": "markdownlint-rule-titlecase markdownlint-rule-enhanced-proper-names"
    },
    "ghcr.io/devcontainers-extra/features/prettier:1": {
      "version": "latest",
      "plugins": "prettier-plugin-toml prettier-plugin-md-names prettier-plugin-css-order prettier-plugin-jinja-template"
    },
    "ghcr.io/dhoeric/features/hadolint:1": {},
    "ghcr.io/devcontainers-extra/features/pylint:2": {
      "version": "latest",
      "plugins": "pylint-django pylint-pytest pylint-plugin-utils pylint-pydantic pylint-protobuf pylint-flask pylint-celery pylint-quotes"
    },
    "ghcr.io/devcontainers-extra/features/protoc:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/r3dpoint/devcontainer-features/tailwindcss-standalone-cli:1": {
      "version": "latest"
    }
  }
}
