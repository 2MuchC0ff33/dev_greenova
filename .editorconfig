# EditorConfig is awesome: https://editorconfig.org/

root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
max_line_length = 88
indent_size = 4

# Web files
[*.{html,js,json,yml,yaml}]
indent_size = 2

# Documentation
[*.rst]
indent_size = 3
max_line_length = 79

[docs/**.txt]
max_line_length = 79

# Special cases
[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

# Vendor files
[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Legacy/specific formats
[*.{c,cpp,h}]
indent_size = 4

[*.{py,ini,toml,json}]
indent_style = space
indent_size = 4

[*.{js,jsx,css,html,yml,yaml,md}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
